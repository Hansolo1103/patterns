/*

   Modals

   Base:
    md

   Elements:
    c = Container
    cb = close-button
    b = Body
 */

.md
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  background-color: alpha($optimistic-blue-light, 0.75)
  z-index: 1000
  overflow-y: auto

  &-cb
    position: absolute
    width: 45px
    height: 45px
    padding: 0
    top: 0
    right: 0
    color: $white

    @media $media-large
      width: 55px
      height: 55px

    @media $media-xlarge
      width: 65px
      height: 65px

    &:after
      background-color: $freedom-red-light
      position: absolute
      color: $white
      content: " "
      top: 0
      left: 0
      bottom: 0
      right: 0
      z-index: 1

    &:before
      content:'\00D7'
      position: absolute
      font-size: $font-800
      z-index: 2
      top: 50%
      left: 50%
      transform: translateY(-50%) translateX(-50%)

    &:hover, &:focus
      background-color: $optimistic-blue

  &-c
    background-color: $white
    margin: 0.5rem
    max-width: 800px
    position: relative
    padding-top: 65px

    @media $media-medium
      margin: 4rem auto

      &--fw
        margin: 0
  &--fw
    .md-c
      margin: 0
      max-width: none
      width: 100%
      height: 100%
      padding-top: 0

      @media $media-medium
        margin: 0
